<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/trip_item_view"
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/mytrip_item_title"
            android:textSize="20sp"
            android:text="Select A"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/mytrip_item_howfar"
            android:textColor="#24202020"
            android:textSize="16sp"
            android:text="44km , 30min"
            app:layout_constraintTop_toBottomOf="@id/mytrip_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <android.support.v7.widget.RecyclerView
            android:layout_marginTop="5dp"
            android:id="@+id/mytrip_item_taglist"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/mytrip_item_howfar"
            android:layout_width="match_parent"
            android:layout_height="20dp" />

    </android.support.constraint.ConstraintLayout>

    <View
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="#14000000"
        android:layout_width="370dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="1dp"/>

</android.support.constraint.ConstraintLayout>